<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/widget_margin"
                android:layout_gravity="center"
                android:gravity="center">

    <RelativeLayout
            android:id="@+id/widget_icon_bg_layout"
            android:layout_width="@dimen/icon_widget_size"
            android:layout_height="@dimen/icon_widget_size"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/widget_bg_shape_circle_gialla"
            tools:ignore="UselessParent">

        <ImageView
                android:id="@+id/widget_icon_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/refresh"/>

        <ProgressBar
                android:id="@+id/widget_icon_refresh_progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_margin="@dimen/widget_icon_progressbar_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:indeterminate="true"
                android:indeterminateOnly="true"
                android:theme="@style/AppTheme.WhiteAccent"
                android:visibility="gone"
        />
    </RelativeLayout>

</RelativeLayout>